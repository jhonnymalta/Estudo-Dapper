@model IEnumerable<UsuarioModel>
@{
    ViewData["Title"] = "Usuários";
}

<h1>Todos os Usuários</h1>
<a asp-action="CriarView" class="btn btn-primary">Criar Novo</a>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Email</td>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr onclick="window.location='/Usuario/editarview/@user.Id'">
               
                <td scope="col">@user.Id</td>
                <td scope="col">@user.Nome</td>
                <td scope="col">@user.Email</td>
                

                
            </tr>
        }
    </tbody>
</table>